{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_.]+$": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string"
        },
        "cols": {
          "type": "integer"
        },
        "color": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "style": {
          "type": "string"
        },
        "position": {
          "type": "integer"
        },
        "fields": {
          "type": "array",
          "items": {
            "$ref": "sch-field.json"
          }
        },
        "cond_fields": {
          "type": "array",
          "items": {
            "$ref": "sch-conditional-field.json"
          }
        },
        "wf": {
          "type": "boolean"
        },
        "wf_position": {
          "type": "integer"
        }
      },
      "required": [
        "key",
        "cols",
        "position"
      ]
    }
  }
}